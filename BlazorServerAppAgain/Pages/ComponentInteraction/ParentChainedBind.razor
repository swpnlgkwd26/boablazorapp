@page "/parentchainedbind"

<h3>ParentChainedBind</h3>
<input type="text" @bind="Title" @bind:event="oninput" />

<ChildChainedBind @bind-MainTitle="Title" 
                  @bind-MainTitle:event="MainTitleChanged"/>
<Alert>
    <h2> Some another Data</h2>
</Alert>

@code {

    public string Title { get; set; } = "Two Way Data Binding";

}
